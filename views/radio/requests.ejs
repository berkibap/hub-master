<% include ../partials/footer.ejs %>
<script>
   let removeRequest = (id) =>
  {
    $('tr[data-id=' + id + ']').fadeOut();
    $.ajax({
      url: '/api/requests/delete/' + id,
      method:'POST'
    }).done(resp => {
      if(resp.message == 'ok')
      {
        return;
      }
      else {
        alert('Please reload page.');
      }
    })
  }
  $(document).ready(() => {
    //  <tr> <td> </td><td> </td><td> </td><td> </td><td></td><td></td><td class="text-right"> <div class="dropdown"> <a class="btn btn-sm btn-icon-only text-light" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <i class="fas fa-ellipsis-v"></i> </a> <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow"> <a class="dropdown-item" href="#"><i class="fas fa-user-edit"></i> Edit</a> <a class="dropdown-item" href="#"><i class="fas fa-lock"></i> Reset Password & Send Over Discord</a> <a class="dropdown-item" href="#"><i class="fas fa-user-times"></i> Fire</a> </div></div></td></tr>
    $.ajax({
      url: '/api/requests',
      data: {
        userID: '<%= user.id %>'
      },
      method:'POST'
    }).done(data => {
       if(Object.keys(data).length > 0)
       {
          data.forEach(request => {
            let item = $('#requests').append(' <tr data-id="'+request.id+'" id="request-'+request.id+'"> <td>'+ request.id +'</td><td>'+ request.name +'</td><td> '+ request.type +' </td><td> '+ request.message +' </td><td>'+ request.extra +'</td><td>'+ request.timestamp +'</td><td class="text-right"> <div class="dropdown"> <a class="btn btn-sm btn-icon-only text-light" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <i class="fas fa-ellipsis-v"></i> </a> <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow"> <a id="remove-request" class="dropdown-item" href="#" data-id="'+request.id+'" onclick="removeRequest($(this).attr(\'data-id\'));"><i class="fas fa-check"></i> Done</a></div></div></td></tr>')
          })  
       }
       else {
         $('#requests').append('<tr><td width="100%" class="text-center"> No Requests Found!  </td></tr>')
       }

  })
 
})
</script>